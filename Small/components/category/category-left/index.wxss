.list-view {
  display: flex;
  flex-direction: column;
  height: 100%;
  border-right: 1rpx solid #eee;
  background: #fff;
}
.list-container {

}
.list-item {
  display: flex;
  flex-direction: row;
  height: 100rpx;
}
.item-left-line {
  width: 6rpx;
  background: orange;

}
.text-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 90%;
}
.item-text {
  padding: 10rpx;
