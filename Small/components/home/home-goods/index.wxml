<!--components/home/home-goods/index.wxml-->
<scroll-view scroll-y="true">
  <view class="welfares">
      <block wx:for="{{items}}" wx:key>
      <view class="welfares-good" data-type="{{item.name}}" data-typeid="{{0}}">
        <view>
          <image src="{{item.img}}" class="welfares-image" mode="widthFix"/> 
        </view>
        <view class="product-name">
          {{item.name}}
        </view>
        <view class="product-price-wrap">
          <p class="product-price-new">￥{{1}}</p>  
          <p class="product-price-old">￥{{2}}</p> 
          <p class="discount">{{2}}折</p>  
        </view>
        
      </view>
    </block> 
  </view>
</scroll-view> 
